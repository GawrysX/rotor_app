<MyLayout>:
    degrees: 0
    degreeLabel: degreeLabel
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Button:
		    id: img_left
			font_size: 32
			text: "Left"
			on_release: root.RotateLeft()
		Button:
		    id: img_right
			font_size: 32
			text: "Right"
			on_release: root.RotateRight()

        Label:
			id: degreeLabel
			font_size: 32

        Image:
            source: "arrow.jpg"
            size: self.texture_size
            canvas.before:
                PushMatrix
                Rotate:
                    angle: -root.degrees
                    origin: self.center
            canvas.after:
                PopMatrix
            width: 100
            allow_stretch: True
